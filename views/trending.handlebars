<style>
    .card {
        margin-top: 50px;
        margin-left: 10px;
        border: 2px solid black
    }

    .card-header {
        font-size: 3em;
        border-bottom: 2px solid black;
        /*Dynamic Background Color*/
    }

    .sm {
        font-size: 1em;
    }

    .list-group-flush {
        margin: 0;
        margin-top: 15px;
        margin-bottom: 20px;
        width: 10vw
    }

    .list-group-item {
        border-bottom: 2px solid black;

    }

    .list-group-item:hover {
        transition: all .1s ease-out;
    }

    .outOff {
        /*background-color: rgb(203, 229, 255);*/
        /*Dynamic Background Color*/
        padding: 10px;
        padding-left: 20px;
    }

    .outOff:hover {
        transition: all .1s ease-in-out;
        border-radius: 9px;
        background-color: rgb(200, 200, 200);
        margin-bottom: 2px;
    }

    * {
        box-sizing: border-box;
    }

    .heading {
        font-size: 25px;
        margin-right: 25px;
    }

    .fa {
        font-size: 25px;
    }

    .checked {
        color: orange;
    }

    /* Three column layout */
    .side {
        float: left;
        width: 13em;
        margin-top: 10px;
    }

    .middle {
        float: left;
        width: 70%;
        margin-top: 10px;
    }

    /* Place text to the right */
    .right {
        text-align: right;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    /* The bar container */
    .bar-container {
        width: 100%;
        background-color: #f1f1f1;
        text-align: center;
        color: white;
    }

    /* Individual bars */
    .bar-5 {
        width: 100%;
        height: 18px;
        background-color: #04AA6D;
    }

    .bar-4 {
        width: 80%;
        height: 18px;
        background-color: #2196F3;
    }

    .bar-3 {
        width: 60%;
        height: 18px;
        background-color: #00bcd4;
    }

    .bar-2 {
        width: 40%;
        height: 18px;
        background-color: #ff9800;
    }

    .bar-1 {
        width: 20%;
        height: 18px;
        background-color: #f44336;
    }

    /* Responsive layout - make the columns stack on top of each other instead of next to each other */
    @media (max-width: 400px) {

        .side,
        .middle {
            width: 100%;
        }

        /* Hide the right column on small screens */
        .right {
            display: none;
        }
    }
</style>
