<style>
    .text-center {
        margin-top: 40px;
    }

    .card-header {
        background-color: rgb(51, 51, 51);
        color: white;
        border-top: 2px solid black;
        border-left: 2px solid black;
        border-right: 2px solid black;
    }

    .btn-primary {
        color: white;
        border: 1px solid black;
    }

    .card-body {
        background-color: rgb(222, 245, 255);
    }

    img {
        height: 2px;
        width: 2px;
    }

    .p-3 {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .p-3 a {
        height: 2em;
        width: 2em;
        padding: 0;
        padding-top: 2px;
    }

    .p-3 img {
        width: 1.7em;
        height: 1.8em;
        border-radius: 9px;
    }
</style>
<div class="container">
    {{#each context}}
    <div class="card text-center">
        <div class="card-header h2">
            {{this.title}}
        </div>
        <div class="card">
            <div class="card-body">
                <p class="h5">{{this.desc}}</p>
                <a href="/rate/{{this.slug}}" class="btn btn-primary">Rate</a>
            </div>
        </div>
        <div class="card-footer text-muted">
        </div>
    </div>
    {{/each}}
    {{!-- Footer --}}
    <footer class="text-center text-white" style="background-color: #21081a;">
        <div class="container p-1"></div>
        <p class="h3">Source Code</p>
        <a class="btn btn-primary btn-floating m-1" style="background-color: #3b5998;"
            href="https://github.com/Jay-Karia/Rate-Us" target="_blank" role=""><i class=""></i>
            â†—
        </a>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            <p class="h5">My Profile</p>
            <a class="btn btn-primary btn-floating m-1" style="background-color: #21081a; border: none"
                href="https://github.com/Jay-Karia" target="_blank" role=""><i class=""></i>
                <img src="github.png" alt="">
            </a>
        </div>
    </footer>
</div>
